<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/splashFragment">
    <fragment android:id="@+id/loginFragment" android:name="com.github.repos.LoginFragment"
              android:label="fragment_login" tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_repoFragment" app:destination="@id/repoFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/repoFragment" android:name="com.github.repos.RepoFragment" android:label="fragment_repo"
              tools:layout="@layout/fragment_repo">
        <argument android:name="token" app:argType="string"/>
        <action android:id="@+id/action_repoFragment_to_repoDetailFragment" app:destination="@id/repoDetailFragment"/>
    </fragment>
    <fragment android:id="@+id/repoDetailFragment" android:name="com.github.repos.RepoDetailFragment"
              android:label="fragment_repo_detail" tools:layout="@layout/fragment_repo_detail">
        <argument android:name="repoId" app:argType="string"/>
    </fragment>
    <fragment android:id="@+id/splashFragment" android:name="com.github.repos.SplashFragment"
              android:label="fragment_splash" tools:layout="@layout/fragment_splash">
        <action android:id="@+id/action_splashFragment_to_repoFragment" app:destination="@id/repoFragment"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action android:id="@+id/action_splashFragment_to_loginFragment" app:destination="@id/loginFragment"/>
    </fragment>
</navigation>